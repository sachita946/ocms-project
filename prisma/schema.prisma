generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  INSTRUCTOR
  ADMIN
}

enum Level {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum ContentType {
  VIDEO
  ARTICLE
  QUIZ
  ASSIGNMENT
  DOWNLOAD
}

enum CompletionStatus {
  ACTIVE
  COMPLETED
  DROPPED
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
}

enum QuestionType {
  MULTIPLE_CHOICE
  TRUE_FALSE
  SHORT_ANSWER
}

model User {
  id              Int  @id @default(autoincrement())
  email           String   @unique
  password        String?
  first_name      String
  last_name       String
  profile_picture String?
  google_id       String?  @unique
  facebook_id     String?  @unique
  bio             String?
  is_active       Boolean  @default(true)
  role            Role     @default(STUDENT)
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt

  studentProfile    StudentProfile?
  instructorProfile InstructorProfile?

  courses_created Course[] @relation("CourseInstructor")

  notes           VideoNote[]
  reviews         Review[]
  certificates    Certificate[]
  payments        Payment[]
  activities      Activity[]
  notifications   Notification[]
  courseResources CourseResource[]
  lessonResources LessonResource[]
}

model StudentProfile {
  id                      Int      @id @default(autoincrement())
  user_id                 Int   @unique
  full_name               String
  phone                   String?
  profile_picture         String?
  bio                     String?
  current_education_level String?
  interests               String[]
  is_active               Boolean  @default(true)

  user          User          @relation(fields: [user_id], references: [id], onDelete: Cascade)
  enrollments   Enrollment[]  @relation("StudentEnrollments")
  quiz_attempts QuizAttempt[]
  certificates  Certificate[] @relation("StudentCertificates")
  payments      Payment[]     @relation("StudentPayments")
  reviews       Review[]      @relation("StudentReviews")
}

model InstructorProfile {
  id              Int     @id @default(autoincrement())
  user_id         Int  @unique
  full_name       String
  phone           String?
  profile_picture String?
  bio             String?
  expertise_area  String?
  website         String?
  qualifications  String?
  experience_years Int?
  is_verified     Boolean @default(false)
  is_pending_approval Boolean @default(false)

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)
  
  earnings InstructorEarning[]
}

model Semester {
  id           Int       @id @default(autoincrement())
  name         String    @unique // "Semester 1", "Semester 2", etc.
  semester_num Int       @unique // 1-8
  description  String?
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt

  subjects Subject[]
}

model Subject {
  id          Int       @id @default(autoincrement())
  semester_id Int
  program     String    // BIM, CSIT, BCA, etc.
  title       String    // Course subject title
  description String?
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt

  semester  Semester         @relation(fields: [semester_id], references: [id], onDelete: Cascade)
  lessons   Lesson[]
  resources CourseResource[] // Subject resources

  @@unique([semester_id, program, title])
  @@index([semester_id])
  @@index([program])
  @@index([semester_id, program])
}

model Course {
  id                Int       @id @default(autoincrement())
  title             String
  description       String?
  instructor_id     Int
  category          String?
  level             Level     @default(BEGINNER)
  language          String    @default("English")
  duration_weeks    Int?
  price             Float?
  discount_price    Float?
  thumbnail_url     String?
  promo_video_url   String?
  is_published      Boolean   @default(false)
  last_edition      DateTime?
  requirements      String[]
  learning_outcomes String[]
  zoom_link         String?

  instructor   User             @relation("CourseInstructor", fields: [instructor_id], references: [id], onDelete: Cascade)
  lessons      Lesson[]
  enrollments  Enrollment[]     @relation("CourseEnrollments")
  certificates Certificate[]    @relation("CourseCertificates")
  payments     Payment[]        @relation("CoursePayments")
  reviews      Review[]         @relation("CourseReviews")
  activities   Activity[]
  resources    CourseResource[]
  instructorEarnings InstructorEarning[]
}

model Lesson {
  id           Int         @id @default(autoincrement())
  course_id    Int
  subject_id   Int
  title        String
  content_type ContentType
  content_url  String?
  duration     Int?
  updated_at   DateTime    @updatedAt

  course     Course         @relation(fields: [course_id], references: [id], onDelete: Cascade)
  subject    Subject        @relation(fields: [subject_id], references: [id], onDelete: Cascade)
  resources  Resource[]
  notes      VideoNote[]
  quiz       Quiz?
  progress   Progress[]
  activities Activity[]
  lessonResources LessonResource[]

  @@index([course_id])
  @@index([subject_id])
}

model VideoNote {
  id                String @id @default(uuid())
  user_id           Int
  lesson_id         Int
  timestamp_seconds Int    @default(0)
  text              String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user   User   @relation(fields: [user_id], references: [id], onDelete: Cascade)
  lesson Lesson @relation(fields: [lesson_id], references: [id], onDelete: Cascade)
}

model Review {
  id         Int      @id @default(autoincrement())
  student_id Int
  course_id  Int
  rating     Int      @default(0)
  comment    String?
  created_at DateTime @default(now())

  student StudentProfile @relation("StudentReviews", fields: [student_id], references: [id], onDelete: Cascade)
  course  Course         @relation("CourseReviews", fields: [course_id], references: [id], onDelete: Cascade)
  User    User?          @relation(fields: [userId], references: [id])
  userId  Int?
}

model Certificate {
  id                Int      @id @default(autoincrement())
  student_id        Int
  course_id         Int
  issued_at         DateTime @default(now())
  certificate_url   String
  verification_code String   @unique

  student StudentProfile @relation("StudentCertificates", fields: [student_id], references: [id], onDelete: Cascade)
  course  Course         @relation("CourseCertificates", fields: [course_id], references: [id], onDelete: Cascade)
  User    User?          @relation(fields: [userId], references: [id])
  userId  Int?
}

model Notification {
  id         Int      @id @default(autoincrement())
  user_id    Int
  message    String
  created_at DateTime @default(now())

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model Activity {
  id         Int      @id @default(autoincrement())
  user_id    Int
  lesson_id  Int?
  course_id  Int?
  action     String
  created_at DateTime @default(now())

  user   User    @relation(fields: [user_id], references: [id], onDelete: Cascade)
  lesson Lesson? @relation(fields: [lesson_id], references: [id], onDelete: Cascade)
  course Course? @relation(fields: [course_id], references: [id], onDelete: Cascade)
}

model Resource {
  id        Int    @id @default(autoincrement())
  lesson_id Int
  title     String
  file_url  String
  file_type String

  lesson Lesson @relation(fields: [lesson_id], references: [id], onDelete: Cascade)
}

model Enrollment {
  id                Int              @id @default(autoincrement())
  student_id        Int
  course_id         Int
  enrolled_at       DateTime         @default(now())
  completion_status CompletionStatus @default(ACTIVE)
  last_accessed     DateTime?
  updated_at        DateTime         @updatedAt
  enrollment_code   String           @unique @default(uuid())

  student  StudentProfile @relation("StudentEnrollments", fields: [student_id], references: [id], onDelete: Cascade)
  course   Course         @relation("CourseEnrollments", fields: [course_id], references: [id], onDelete: Cascade)
  progress Progress[]

  @@unique([student_id, course_id])
}

model Progress {
  id            Int       @id @default(autoincrement())
  enrollment_id Int
  lesson_id     Int
  is_completed  Boolean   @default(false)
  completed_at  DateTime?

  enrollment Enrollment @relation(fields: [enrollment_id], references: [id], onDelete: Cascade)
  lesson     Lesson     @relation(fields: [lesson_id], references: [id], onDelete: Cascade)

  @@unique([enrollment_id, lesson_id])
}

model Quiz {
  id            Int    @id @default(autoincrement())
  lesson_id     Int    @unique
  title         String
  passing_score Int    @default(70)
  duration      Int?

  lesson    Lesson        @relation(fields: [lesson_id], references: [id], onDelete: Cascade)
  questions Question[]
  attempts  QuizAttempt[]
}

model Question {
  id            Int          @id @default(autoincrement())
  quiz_id       Int
  question_text String
  question_type QuestionType
  points        Int          @default(1)

  quiz    Quiz     @relation(fields: [quiz_id], references: [id], onDelete: Cascade)
  answers Answer[]
}

model Answer {
  id          Int     @id @default(autoincrement())
  question_id Int
  answer_text String
  is_correct  Boolean @default(false)

  question Question @relation(fields: [question_id], references: [id], onDelete: Cascade)
}

model QuizAttempt {
  id         Int     @id @default(autoincrement())
  student_id Int
  quiz_id    Int
  score      Int
  is_passed  Boolean

  student StudentProfile @relation(fields: [student_id], references: [id], onDelete: Cascade)
  quiz    Quiz           @relation(fields: [quiz_id], references: [id], onDelete: Cascade)
}

model Payment {
  id             Int           @id @default(autoincrement())
  student_id     Int
  course_id      Int
  amount         Float
  payment_method String
  transaction_id String
  status         PaymentStatus
  updated_at     DateTime      @updatedAt
  paid_at        DateTime      @default(now())

  student StudentProfile @relation("StudentPayments", fields: [student_id], references: [id], onDelete: Cascade)
  course  Course         @relation("CoursePayments", fields: [course_id], references: [id], onDelete: Cascade)
  User    User?          @relation(fields: [userId], references: [id])
  userId  Int?
  
  earnings InstructorEarning[]
}

model CourseResource {
  id          Int       @id @default(autoincrement())
  course_id   Int?      // Nullable - can be null for subject resources
  subject_id  Int?      // Nullable - for curriculum subject resources
  type        String    // notes, questions, preboard, zoom, board
  title       String
  content     String    @db.Text
  file_url    String?
  file_type   String?
  zoom_link   String?
  user_id     Int
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt

  course  Course?  @relation(fields: [course_id], references: [id], onDelete: Cascade)
  subject Subject? @relation(fields: [subject_id], references: [id], onDelete: Cascade)
  user    User     @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([course_id, type])
  @@index([subject_id, type])
  @@index([user_id])
}

model LessonResource {
  id        Int       @id @default(autoincrement())
  lesson_id Int
  type      String    // notes, questions, preboard, zoom
  title     String
  content   String    @db.Text
  zoom_link String?
  user_id   Int
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  lesson Lesson @relation(fields: [lesson_id], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([lesson_id, type])
  @@index([user_id])
}

model InstructorEarning {
  id            Int      @id @default(autoincrement())
  instructor_id Int
  course_id     Int
  payment_id    Int
  amount        Float
  platform_fee  Float     @default(0.1) // 10% platform fee
  net_amount    Float
  status        String    @default("PENDING") // PENDING, PAID, CANCELLED
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt

  instructor InstructorProfile @relation(fields: [instructor_id], references: [id], onDelete: Cascade)
  course     Course           @relation(fields: [course_id], references: [id], onDelete: Cascade)
  payment    Payment          @relation(fields: [payment_id], references: [id], onDelete: Cascade)

  @@index([instructor_id])
  @@index([course_id])
  @@index([payment_id])
}